<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicineAlarm.Pages.DataBindingPage"
             Title="DataBindingPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            x:Name="Label"
            BindingContext="{x:Reference FontSizeInput}"
            FontSize="{Binding Path=Text}"/>

        <Label
            Text="Font Size"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            FontSize="30"/>
        <Entry
            x:Name="FontSizeInput"
            Placeholder="Font size here..."
            FontSize="30"/>

        <Label
            Text="{Binding data.MedicineName}"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            FontSize="30"/>
    </VerticalStackLayout>
</ContentPage>